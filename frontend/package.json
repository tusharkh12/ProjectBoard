{
  "name": "project-board",
  "version": "1.0.0",
  "description": "ProjectBoard - Collaborative Task Management with Angular 20 & Spring Boot",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "npx eslint src/**/*.ts",
    "backend": "cd ../backend && ./gradlew bootRun",
    "dev": "concurrently \"npm run backend\" \"npm run start\"",
    "setup": "npm install && cd ../backend && ./gradlew build"
  },
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/cdk": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/material": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/router": "^20.1.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@playwright/test": "^1.54.2",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.10.0",
    "angular-eslint": "20.1.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.34.1"
  },
  "keywords": [
    "angular20",
    "signals",
    "standalone-components",
    "spring-boot",
    "gradle",
    "project-management",
    "task-management",
    "fullstack",
    "optimistic-locking"
  ],
  "author": "ProjectBoard Team",
  "license": "MIT"
}
